/**index.wxss**/
page {
  height: 100%;
}
.container {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: flex-start;
  background-color: #fffff8;
  width: 100%;
  height: 100%;
}
.search-top {
  order: 0;
  position: fixed;
  top: 0;
  display: flex;
  flex-direction: row;
  width: 100%;
  /*margin-top: 10rpx;*/
  margin-bottom: 15rpx;
  background-color: lightyellow;
}
.select-picker {
  order: 1;
  position: fixed;
  top: 50px;
  /*height: 30px;*/
  width: 100%;
  padding-left: 20;
  font-size:small;
}
.search-left {
  display: flex;
  float: left;
  margin-left: 20rpx;
}
.search-hint {
  float: left;
  font-weight: bold;
  font-size:small;
  margin-top: 15rpx;
  margin-bottom: 15rpx;
  margin-right: 20rpx;
}
.search-input {
  float: right;
  background-color: lightblue;
  text-align: center;
  font-style: oblique;
  font-size: smaller;
  border: grey thin solid;
  margin-top: 10rpx;
  margin-bottom: 10rpx;
  border-radius: 10rpx;
}
.search-btn {
  float: right;
  font-family: cursive;
  font-size: smaller;
  right: 0;
  margin-right: 40rpx;
  margin-bottom: 10px;
}
.recommendation-list {
  order: 2;
  position: fixed;
  /*top: 80px;*/
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  width: 100%;
}
.list-recs {
  display: flex;
  flex-direction: row;
  margin-top: 6rpx;
  margin-bottom: 6rpx;
  width: 99%;
  border: 1rpx solid lightgray;
  border-radius: 5rpx;
}
.list-sid {
  float: right;
  text-align: left;
  width: 40%;
  padding: 30rpx;
  font-size: small;
  font-style: italic;
}
.list-sname {
  float: left;
  left: 0;
  text-align: left;
  width: 60%;
  padding: 30rpx;
  font-style: normal;
  font-family: Arial;
}
.picker{
    padding-left: 13px;
    color: red;
    font-weight: bolder;
    font-style: italic;
    background-color: #FFFFFF;
}